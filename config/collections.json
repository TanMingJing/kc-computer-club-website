        },
        {
          "key": "attendanceSession1Start",
          "type": "string",
          "required": false,
          "size": 256,
          "description": "第一时段开始时间（JSON: {hour, minute}）"
        },
        {
          "key": "attendanceSession1Duration",
          "type": "integer",
          "required": false,
          "description": "第一时段持续时间（分钟）"
        },
        {
          "key": "attendanceSession2Start",
          "type": "string",
          "required": false,
          "size": 256,
          "description": "第二时段开始时间（JSON: {hour, minute}）"
        },
        {
          "key": "attendanceSession2Duration",
          "type": "integer",
          "required": false,
          "description": "第二时段持续时间（分钟）"
        },
        {
          "key": "attendanceWeekStartDate",
          "type": "string",
          "required": false,
          "size": 256,
          "description": "第1周开始日期（ISO 8601 格式）"
        },
        {
          "key": "attendanceDebugMode",
          "type": "boolean",
          "required": false,
          "default": false,
          "description": "点名调试模式"
        },
        {
          "key": "createdAt",
          "type": "datetime",
          "required": false,
          "description": "创建时间"
        },
        {
          "key": "updatedAt",
          "type": "datetime",
          "required": false,
          "description": "更新时间"
        }
      ]
    },
    {
