        },
        {
          "key": "partners",
          "type": "integer",
          "required": false,
          "description": "合作伙伴数"
        },
        {
          "key": "githubUrl",
          "type": "string",
          "required": false,
          "size": 512,
          "description": "GitHub 链接"
        },
        {
          "key": "discordUrl",
          "type": "string",
          "required": false,
          "size": 512,
          "description": "Discord 链接"
        },
        {
          "key": "instagramUrl",
          "type": "string",
          "required": false,
          "size": 512,
          "description": "Instagram 链接"
        },
        {
          "key": "youtubeUrl",
          "type": "string",
          "required": false,
          "size": 512,
          "description": "YouTube 链接"
        },
        {
          "key": "attendanceDayOfWeek",
          "type": "integer",
          "required": false,
